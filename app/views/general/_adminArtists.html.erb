<!-- Put all shared Artists links here to render if ther person signed in is an admin -->
<% if current_user.try(:admin?) %>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.biography %></td>
      <td><%= image_tag(artist.photo) %></td>
      <td><%= artist.genre %></td>
      <td><%= artist.related_artist %></td>
      <td><%= link_to 'Show', artist %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  <%= link_to 'New Artist', new_artist_path %>
<% else %>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.biography %></td>
      <td><%= image_tag(artist.photo) %></td>
      <td><%= artist.genre %></td>
      <td><%= artist.related_artist %></td>
      <td><%= link_to 'Show', artist %></td>
    </tr>
  <% end %>
<% end %>
