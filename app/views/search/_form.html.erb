<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <%= form_tag search_path, :method => :get do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], :class => "form-control", :placeholder => "Search Muzaik..." %>
        <span class="input-group-btn">
          <%= submit_tag "Go!", :name => nil, :class => "btn btn-default", :id => "click-search-button" %>
        </span>
      </div><!-- /input-group -->
    <% end %>
  </div><!-- /.col-lg-6 -->
</div>
