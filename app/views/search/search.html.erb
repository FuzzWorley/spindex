<%= render 'search/form' %>

<ul>
  <% @artists.each do |artist| %>
    <li>
      <h3>
        <%= link_to artist.name, artist_path(artist) %>

      </h3>
    </li>
  <% end %>
</ul>

<% if @albums.any? %>

  <h2>Matching Albums</h2>
  <% @albums.each do |album| %>
    <br>
    <%= link_to album.name, album_path(album) %>
  <% end %>
<% end %>
