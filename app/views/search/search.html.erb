<h1>Search Results</h1>
<% if @artists.any? %>
  <ul>
    <% @artists.each do |artist| %>
    <li>
      <%= link_to artist.name, artist_path(artist) %>
    </li>
  <% end %>
  </ul>
<% end %>

<% if @albums.any? %>
  <h1>Matching Albums</h1>
  <% @albums.each do |album| %>
    <br>
    <%= link_to album.name, album_path(album) %>
  <% end %>
<% end %>

<% if (@artists.empty?) && (@albums.empty?) %> <!--how to type in nothing and this comes up -->
  <script type="text/javascript">
  $(window).load(function(){
      $('#create-artist').modal('show');
  });
  </script>
  <h2> You've discovered an Artist that does not exist in our database! </h2>
  <%= render "artists/form" %>
<% end %>



