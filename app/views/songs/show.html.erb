<p>
  <strong>Artist:</strong>
  <%= @song.album.artist.name %>
</p>

<p>
  <strong>Album:</strong>
  <%= @song.album.name %>
  <% if @song.album.photo %>
    <%= image_tag(@song.album.photo) %>
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @song.name %>
</p>

<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_song_path(@song) %> |
<% end %>
<%= link_to 'Back', songs_path %>

