
<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist.name %>
</p>
<p>
  Rating: <%= rating_for @album, "overall", :star => 10, :enable_half => true, :half_show => true, :disable_after_rate => false, :cancel => false %>
</p>
<p>
  <strong>Release date:</strong>
  <%= @album.release_date %>
</p>

<p>
  <strong>Photo:</strong>
  <%= image_tag(@album.photo) %>
</p>
<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_album_path(@album) %> |
<% end %>
<%= link_to 'Back', albums_path %><br>

<div class="fb-comments" data-href="http://localhost:3000/albums/<%= @album.id %>" data-numposts="5" data-colorscheme="light"></div>
