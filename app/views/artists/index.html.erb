

<h1>Listing Artists</h1>
<%= render 'search/form' %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Biography</th>
      <th>Photo</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.biography %></td>
        <td><%= image_tag(artist.photo) %></td>
        <td><%= artist.genre %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>

